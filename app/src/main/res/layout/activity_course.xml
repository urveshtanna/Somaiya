<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="urvesh.com.somaiya.Course">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_arts"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="20dp"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentStart="true"
                    android:background="#009688">

                    <LinearLayout
                        android:id="@+id/layout_arts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center|bottom"
                        android:orientation="vertical">
                        <include
                            android:layout_height="56dp"
                            android:layout_width="match_parent"
                            android:id="@+id/app_bar_arts1"
                            layout="@layout/app_bar_arts"
                            android:transitionName="@string/action_bar_animation_arts"
                            android:layout_gravity="bottom">
                        </include>

                    </LinearLayout>
                </android.support.v7.widget.CardView>





                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_commerce"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="20dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_below="@+id/card_view_arts">

                    <LinearLayout
                        android:id="@+id/layout_commerce"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <include
                            android:layout_height="56dp"
                            android:layout_width="match_parent"
                            android:id="@+id/app_bar_commerce1"
                            layout="@layout/app_bar_commerce"
                            android:transitionName="@string/action_bar_animation_commerce"
                            android:layout_gravity="bottom">
                        </include>
                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_science"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="20dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_below="@+id/card_view_commerce">

                    <LinearLayout
                        android:id="@+id/layout_science"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <include
                            android:layout_height="56dp"
                            android:layout_width="match_parent"
                            android:id="@+id/app_bar_science1"
                            layout="@layout/app_bar_science">
                        </include>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
